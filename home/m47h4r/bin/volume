#!/bin/bash
action=$1
value=`pactl list sinks | grep '^[[:space:]]Volume:' | head -n $(( $SINK + 1 )) | tail -n 1 | sed -e 's,.* \([0-9][0-9]*\)%.*,\1,'`

if [ "$action" == "inc" ]; then
	if [ "$value" -le 95 ]; then
		pactl set-sink-volume 0 +2%
	fi
elif [ "$action" == "dec" ]; then
	pactl set-sink-volume 0 -2%
fi

paplay /usr/share/sounds/freedesktop/stereo/audio-volume-change.oga
