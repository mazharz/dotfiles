#!/bin/sh

workingDirectory=$1

if [ -z "$1" ]; then
  tmux new -s work -n code \; \
    send-keys -t 1 "nvim" Enter \; \
    neww -n shell \; \
    selectw -t 1
else
  tmux new -s work -n code \; \
    send-keys -t 1 "cd $1; nvim" Enter \; \
    neww -n shell \; \
    send-keys -t 2 "cd $1" Enter \; \
    neww -n notes \; \
    send-keys -t 3 "nvim todo.md" Enter \; \
    selectw -t 1
fi

