#!/bin/sh

# set mark for i3
i3-msg 'mark w'

cd ~/mzd/code/gwat

tmux new -s work-notes -n main \; \
  send-keys -t 1 "cd notes && nvim todo.md" Enter\; \
  selectw -t 1

