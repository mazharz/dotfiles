#!/bin/bash
set -e

echo '# Installing i3 packages...'
sleep 1
sudo pacman -S xorg xorg-xinit xdotool i3 i3blocks alacritty flameshot feh arandr pipewire pipewire-alsa pipewire-pulse pavucontrol thunar tumbler dunst picom copyq bluez bluez-utils blueman openssh networkmanager networkmanager-openvpn network-manager-applet playerctl xclip redshift lxappearance gucharmap qalculate-gtk slop gvfs-mtp gvfs-gphoto2 gnome-keyring libsecret libgnome-keyring seahorse lxsession gst-plugins-bad gst-plugins-base gst-plugins-good gstreamer nvidia-open nvidia-settings nvidia-utils nvidia-prime xdg-desktop-portal-gtk tlp scrcpy

echo '# Enabling tlp (powersaving)'
sleep 1
sudo systemctl enable tlp.service
sudo systemctl mask systemd-rfkill.service
sudo systemctl mask systemd-rfkill.socket

# sway
echo '# Installing sway packages...'
sleep 1
sudo pacman -S sway swaylock swayidle swaybg j4-dmenu-desktop bemenu wl-clipboard xdg-desktop-portal xdg-desktop-portal-gtk xdg-desktop-portal-wlr brightnessctl gammastep grim slurp imv
