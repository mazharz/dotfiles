#!/bin/bash

# Install packages
echo '##################################################'
echo '# Installing i3 packages...'
echo '##################################################'
sleep 1
sudo pacman -S xorg xorg-xinit xdotool i3 i3blocks rofi kitty maim feh arandr pipewire pipewire-alsa pipewire-pulse pavucontrol nautilus dunst picom copyq bluez bluez-utils blueman openssh networkmanager networkmanager-openvpn network-manager-applet playerctl xclip redshift lxappearance gucharmap gnome-calculator slop gvfs-mtp gvfs-gphoto2 gnome-keyring libsecret libgnome-keyring seahorse lxsession

# Install vpn packages
echo '##################################################'
echo '# Installing vpn packages...'
echo '##################################################'
sleep 1
sudo pacman -S shadowsocks-libev simple-obfs
