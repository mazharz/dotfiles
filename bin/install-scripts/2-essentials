#!/bin/bash

# Essentials
echo '##################################################'
echo '# Installing the very essentials...'
echo '##################################################'
sleep 1
sudo pacman -S base-devel curl wget git stow python-pip

# Create ~/builds dir
echo '##################################################'
echo '# Creating ~/builds directory...'
echo '##################################################'
sleep 1
mkdir $HOME/builds

# Install trizen for handling aur
echo '##################################################'
echo '# Installing trizen for handling aur...'
echo '##################################################'
sleep 1
git clone https://aur.archlinux.org/trizen-git.git $HOME/builds/trizen
cd $HOME/builds/trizen
makepkg -si
cd $HOME

# Setup cli essentials
echo '##################################################'
echo '# Setting up cli essentials...'
echo '##################################################'
sleep 1
sudo pacman -S zsh
trizen -S oh-my-zsh-git
sudo chsh --shell /usr/bin/zsh m47h4r

# Populate dotfiles
echo '##################################################'
echo '# Populating dotfiles...'
echo '##################################################'
sleep 1
git clone git@github.com:m47h4r/dotfiles.git $HOME/.dotfiles
cd ~/.dotfiles/
stow .
cd $HOME
