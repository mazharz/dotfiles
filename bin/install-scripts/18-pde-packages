#!/bin/bash
set -e

echo '# Installing pde packages...'
sleep 1
# unzip is required by neovim plugins
sudo pacman -S fzf tmux neovim ripgrep dbeaver sqlitebrowser filezilla docker docker-compose unzip xclip lazygit typst shellcheck go go-tools

echo '# Installing go packages...'
sleep 1
go install mvdan.cc/gofumpt@latest
go install github.com/kisielk/errcheck@latest
# golangci-lint itself recommends to install binaries and not use `go install`
trizen -S golangci-lint-bin
