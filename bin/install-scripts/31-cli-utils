#!/bin/bash
set -e

echo '# Installing cli utils...'
sleep 1
sudo pacman -S lm_sensors sysstat bottom unrar unzip tree rsync imagemagick python-pip reflector ranger tldr ledger tokei lshw acpi newsboat

echo '# Installing net tools...'
sleep 1
sudo pacman -S nmap net-tools nethogs bind-tools openbsd-netcat bmon whois

echo '# Installing jcal...'
sleep 1
trizen -S --noconfirm jcal-git
