#!/bin/bash

# Install nvm
echo '##################################################'
echo '# Installing nvm...'
echo '##################################################'
sleep 1
trizen -S --noconfirm nvm

# Install node
echo '##################################################'
echo '# Installing node...'
echo '##################################################'
sleep 1
source $HOME/.nvm/nvm.sh && nvm install node

echo '##################################################'
echo '# Now install other node versions you might need'
echo '# Also install these npm packages:'
echo '# - eslint'
echo '# - sass'
echo '# - prettier'
echo '# - typescript'
echo '# - percollate'
echo '# - yarn'
echo '##################################################'
