#!/bin/bash

# Install packages
echo '##################################################'
echo '# Installing packages...'
echo '##################################################'
sleep 1
# unzip is required by neovim plugins
sudo pacman -S fzf tmux neovim ripgrep sqlitebrowser filezilla docker docker-compose unzip xclip 

# Add m47h4r to docker group
echo '##################################################'
echo '# Adding m47h4r to docker group...'
echo '##################################################'
sleep 1
sudo gpasswd -a m47h4r docker

# Enable & start docker.service
echo '##################################################'
echo '# Enabling & starting docker.service...'
echo '##################################################'
sleep 1
sudo systemctl enable --now docker.service

# Install postman
echo '##################################################'
echo '# Installing postman...'
echo '##################################################'
sleep 1
trizen -S postman-bin

# Install altair
echo '##################################################'
echo '# Installing altair...'
echo '##################################################'
sleep 1
trizen -S altair

# Install fonts
echo '##################################################'
echo '# Installing fonts...'
echo '##################################################'
sleep 1
sudo pacman -S noto-fonts noto-fonts-emoji
trizen -S nerd-fonts-fira-code
trizen -S vazirmatn-fonts

# Install rustup
echo '##################################################'
echo '# Installing rustup'
echo '##################################################'
sleep 1
curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh
