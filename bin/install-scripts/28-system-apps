#!/bin/bash

# Install system apps
echo '##################################################'
echo '# Installing system apps...'
echo '##################################################'
sleep 1
sudo pacman -S calibre xournalpp libreoffice-still gedit gnome-font-viewer file-roller zathura zathura-pdf-mupdf

echo '##################################################'
echo '# Installing LaTeX...'
echo '##################################################'
sleep 1
sudo pacman -S texlive-most texlive-lang
