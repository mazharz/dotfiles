#!/bin/bash

# Install disk apps
echo '##################################################'
echo '# Installing disk apps...'
echo '##################################################'
sleep 1
sudo pacman -S baobab gparted gnome-disk-utility

# Install system apps
echo '##################################################'
echo '# Installing system apps...'
echo '##################################################'
sleep 1
sudo pacman -S calibre xournalpp libreoffice-still evince gedit gnome-font-viewer file-roller

# Install multimedia apps
echo '##################################################'
echo '# Installing multimedia apps...'
echo '##################################################'
sleep 1
sudo pacman -S vlc mpv simplescreenrecorder audacity kid3 handbrake mkvtoolnix-gui ffmpegthumbnailer eog gimp blender inkscape krita

# Install internet apps
echo '##################################################'
echo '# Installing internet apps...'
echo '##################################################'
sleep 1
sudo pacman -S telegram-desktop firefox tor qbittorrent

# Install cli utils
echo '##################################################'
echo '# Installing cli utils...'
echo '##################################################'
sleep 1
sudo pacman -S lm_sensors sysstat htop unrar unzip tree rsync imagemagick nethogs net-tools aria2 bind-tools python-pip reflector

# Install youtube-dl
echo '##################################################'
echo '# Installing youtube-dl...'
echo '##################################################'
sleep 1
pip install youtube-dl

# Install jcal
echo '##################################################'
echo '# Installing jcal...'
echo '##################################################'
sleep 1
trizen -S --noconfirm jcal-git

# Install slack
echo '##################################################'
echo '# Installing slack...'
echo '##################################################'
sleep 1
trizen -S --noconfirm slack-desktop

# Install tor browser
echo '##################################################'
echo '# Installing tor browser...'
echo '##################################################'
sleep 1
gpg --auto-key-locate nodefault,wkd --locate-keys torbrowser@torproject.org
trizen -S --noconfirm tor-browser

# Install gnome-shell-pomodoro
echo '##################################################'
echo '# Installing gnome-shell-pomodoro...'
echo '##################################################'
sleep 1
trizen -S --noconfirm gnome-shell-pomodoro

# Set default applications for common MIME types
sh ~/bin/mime
